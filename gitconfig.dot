[user]
	name = Zachary Whaley
	email = zachbwhaley@gmail.com
[color]
	ui = auto
[diff]
	tool = nvim -d
[merge]
	tool = nvim -d
[difftool]
	prompt = false
[push]
	default = simple
[core]
	editor = nvim
	excludesfile = /home/zwhaley/.gitignore
[alias]
	co = checkout
	br = branch
	st = status
	ci = commit
	lg = log --oneline --graph --decorate=short
	unstage = reset HEAD --
	last = log -1 HEAD
	dif = diff
	sync = !git fetch upstream && git merge upstream/master
	apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
[rebase]
	autosquash = true
[pull]
	rebase = true
