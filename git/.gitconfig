[user]
	name = Zachary Whaley
[color]
	ui = auto
[merge]
	tool = nvimdiff
[mergetool]
	prompt = true
	keepBackup = false
[mergetool "nvimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
	default = simple
[core]
	editor = nvim
[alias]
	co = checkout
	br = branch
	st = status
	ci = commit
	cp = cherry-pick
	di = diff
	sd = diff --staged
	lg = log --oneline --graph --format='format:%C(auto)%h%d %s%C(dim white) 路 %an 路 %C(green)%cr%C(reset)'
	lgg = log --oneline --graph --date='format:%Y %b %d' --format='format:%C(auto)%h%d %s%C(dim white) 路 %an <%ae> 路 %C(green)%cd%C(reset)'
	dif = diff
	sho = show
	pul = pull
	sync = !git fetch upstream && git merge upstream/master
	apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
[rebase]
	autosquash = true
[blame]
	date = relative
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
