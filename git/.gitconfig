[color]
	ui = auto
[merge]
	tool = nvimdiff
[mergetool]
	prompt = true
	keepBackup = false
[mergetool "nvimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
	default = simple
	autoSetupRemote = true
[core]
	editor = nvim
[alias]
	apply-gitignore = !git ls-files -ci --exclude-standard -z | xargs -0r git rm --cached
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	di = diff
	sw = switch
	re = restore
	dif = diff
	lfs-fetch = "!git log --all --format=%H --diff-filter=A -n 1 -- \"$1\" | xargs -I% git checkout % && git checkout - #"
	l =  log --oneline --graph --format='format:%C(auto)%h %s%d'
	lg = log --oneline --graph --format='format:%C(auto)%h%d %s%C(dim white) 路 %an 路 %C(green)%cr%C(reset)'
	lgg = log --oneline --graph --date='format:%Y %b %d' --format='format:%C(auto)%h%d %s%C(dim white) 路 %an <%ae> 路 %C(green)%cd%C(reset)'
	pul = pull
	ds = diff --staged
	sh = show
	st = status
	trim = !git fetch --all --prune && git branch -vv | grep -v $(git symbolic-ref --short HEAD) | awk '/.*: gone]/ {print $1}' | xargs git branch -D -v
[rebase]
	autosquash = true
[blame]
	date = relative
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[hub]
	host = dsgithub.trendmicro.com
[user]
	name = Zachary Whaley
	email = zachbwhaley@gmail.com
[pull]
	rebase = false
[init]
	defaultBranch = main
[advice]
	detachedHead = false
